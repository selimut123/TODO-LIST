<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/md_margin">

    <TextView
        android:id="@+id/item_add_modal_item_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_margin"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="@dimen/sm_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_add_modal_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ex: pay bills"
        android:inputType="text"
        android:textSize="@dimen/sm_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_add_modal_item_name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_add_modal_item_name_text" />

    <TextView
        android:id="@+id/item_add_modal_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md_margin"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="@dimen/sm_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_add_modal_item_name_text" />

    <TextView
        android:id="@+id/item_add_modal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Choose date"
        android:inputType="date"
        android:textSize="@dimen/sm_text"
        app:layout_constraintBottom_toBottomOf="@+id/item_add_modal_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_add_modal_date_text" />

    <TextView
        android:id="@+id/item_add_modal_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/md_margin"
        android:text="Category"
        android:textColor="@color/black"
        android:textSize="@dimen/sm_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_add_modal_date_text" />

    <Spinner
        android:id="@+id/item_add_modal_category_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm_margin"
        android:contentDescription="Category"
        app:layout_constraintStart_toStartOf="@+id/item_add_modal_category_text"
        app:layout_constraintTop_toBottomOf="@+id/item_add_modal_category_text" />

</androidx.constraintlayout.widget.ConstraintLayout>